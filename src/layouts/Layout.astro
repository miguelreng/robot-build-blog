---
const { title } = Astro.props;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{title} | THE BUILD</title>
		<style is:global>
			@font-face {
				font-family: 'Yellix';
				src: url('/fonts/Yellix-Medium.woff2') format('woff2');
				font-weight: 500;
				font-style: normal;
				font-display: swap;
			}
			body {
				font-family: 'Yellix', 'Inter', system-ui, sans-serif;
				background-color: #ffffff;
				color: #000000;
				-webkit-font-smoothing: antialiased;
			}
			::selection {
				background: #000000;
				color: #ffffff;
			}
		</style>
	</head>
	<body class="selection:bg-black selection:text-white">
		<nav class="border-b border-black/5 py-4 px-6 sticky top-0 bg-white/80 backdrop-blur-md z-50">
			<div class="max-w-5xl mx-auto flex justify-between items-center">
				<a href="/" class="text-sm font-medium tracking-tight">
					ROBOT / <span class="text-zinc-400 uppercase text-[10px] tracking-[0.2em] ml-2">The Build</span>
				</a>
				<div class="flex gap-8 text-[10px] font-medium uppercase tracking-widest text-zinc-400">
					<a href="#" class="hover:text-black transition-colors">Archive</a>
					<a href="#" class="hover:text-black transition-colors">Manifesto</a>
				</div>
			</div>
		</nav>
		<main class="max-w-5xl mx-auto px-6 py-20">
			<slot />
		</main>
		<footer class="max-w-5xl mx-auto px-6 py-20 border-t border-black/5 mt-20">
			<div class="flex flex-col md:flex-row justify-between gap-12">
				<div class="max-w-xs">
					<div class="text-sm font-medium mb-4 uppercase tracking-widest">Robot.com</div>
					<p class="text-zinc-400 text-[10px] leading-relaxed uppercase tracking-wider">
						Designing the intelligence for the next generation of general-purpose robots.
					</p>
				</div>
				<div class="grid grid-cols-2 gap-16">
					<div>
						<div class="text-[10px] uppercase tracking-widest text-zinc-300 mb-4">Company</div>
						<div class="flex flex-col gap-2 text-[10px] text-zinc-400 uppercase tracking-widest">
							<a href="#" class="hover:text-black">Careers</a>
							<a href="#" class="hover:text-black">Privacy</a>
						</div>
					</div>
					<div>
						<div class="text-[10px] uppercase tracking-widest text-zinc-300 mb-4">Social</div>
						<div class="flex flex-col gap-2 text-[10px] text-zinc-400 uppercase tracking-widest">
							<a href="#" class="hover:text-black">Twitter</a>
							<a href="#" class="hover:text-black">GitHub</a>
						</div>
					</div>
				</div>
			</div>
		</footer>
	</body>
</html>
