---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Memos Console">
	<div class="max-w-[580px] mx-auto min-h-[60vh] flex flex-col justify-center" id="auth-view">
		<h1 class="text-3xl font-medium tracking-tighter mb-4 text-[#403F3C]">Memos Console</h1>
        <p class="text-[12px] text-[#403F3C]/40 mb-16 font-medium tracking-[0.1em]">Engineering Publishing Intelligence.</p>
		
		<div class="space-y-8">
            <div class="relative">
			    <input type="password" id="password" placeholder="Builder Password" class="w-full bg-transparent border-b border-[#403F3C]/10 py-3 text-[14px] text-[#403F3C] outline-none font-medium focus:border-[#403F3C]/30 transition-colors pr-20" />
                <button id="toggle-pass" class="absolute right-0 top-1/2 -translate-y-1/2 text-[10px] uppercase font-bold text-[#403F3C]/20 hover:text-[#403F3C] transition-colors">Show</button>
            </div>
            <div class="flex items-center gap-2">
                <input type="checkbox" id="remember-me" class="w-3 h-3 accent-[#403F3C]" />
                <label for="remember-me" class="text-[11px] font-medium text-[#403F3C]/40">Remember me on this device</label>
            </div>
			<button id="login-btn" class="w-full bg-[#403F3C] text-[#F8F6F3] text-[12px] font-bold uppercase tracking-widest py-4 rounded-sm hover:opacity-90 transition-opacity font-yellix">Access Console</button>
		</div>
	</div>

	<div id="console-view" class="hidden pt-12 pb-32">
        <header class="flex justify-between items-center mb-12 max-w-[1200px] mx-auto px-6">
            <div>
                <h1 class="text-xl font-medium tracking-tighter text-[#403F3C]">Memos Console</h1>
                <p class="text-[10px] text-[#403F3C]/30 font-bold uppercase tracking-widest mt-1">Status: Authorized</p>
            </div>
            <button id="logout-btn" class="text-[10px] uppercase font-bold text-[#403F3C]/20 hover:text-[#403F3C] transition-all font-yellix">Logout</button>
        </header>

        <div class="flex flex-col lg:flex-row gap-12 max-w-[1200px] mx-auto px-6">
            <!-- Left: Editor Column -->
            <div class="flex-1 space-y-12">
                <section>
                    <h2 class="text-[10px] uppercase tracking-[0.2em] text-[#403F3C]/30 mb-4 font-bold">Source & Configuration</h2>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <select id="memo-select" class="bg-[#403F3C]/5 border-none rounded-sm px-4 py-3 text-[13px] text-[#403F3C] outline-none font-medium cursor-pointer font-yellix">
                            <option value="">Select Builders Memo...</option>
                        </select>
                        <input type="password" id="api-key" placeholder="OpenRouter API Key" class="bg-[#403F3C]/5 border-none rounded-sm px-4 py-3 text-[13px] text-[#403F3C] outline-none font-mono" />
                    </div>
                </section>

                <section>
                    <div class="flex justify-between items-center mb-4">
                        <h2 class="text-[10px] uppercase tracking-[0.2em] text-[#403F3C]/30 font-bold">Draft Content (MDX)</h2>
                        <button id="ai-btn" class="bg-white border border-[#403F3C]/10 text-[#403F3C] text-[10px] font-bold uppercase px-3 py-1.5 rounded-sm hover:bg-zinc-50 transition-colors font-yellix">Fine-tune with AI</button>
                    </div>
                    <textarea id="editor" class="w-full h-[600px] bg-[#403F3C]/5 border-none rounded-sm p-8 text-[14px] text-[#403F3C]/80 font-medium leading-relaxed outline-none focus:bg-[#403F3C]/8 transition-all resize-none font-mono" placeholder="Select a memo to begin..."></textarea>
                    <button id="publish-btn" class="w-full mt-6 bg-[#403F3C] text-[#F8F6F3] text-[12px] font-bold uppercase tracking-widest py-4 rounded-sm hover:opacity-90 transition-opacity font-yellix">Ship to Production</button>
                </section>
            </div>

            <!-- Right: Toolbox Column -->
            <div class="lg:w-[320px] space-y-12">
                <section>
                    <h2 class="text-[10px] uppercase tracking-[0.2em] text-[#403F3C]/30 mb-6 font-bold">Interactive Components</h2>
                    <div class="space-y-3" id="toolbox">
                        <div draggable="true" class="component-card group p-4 border border-[#403F3C]/5 rounded-sm bg-white hover:border-[#403F3C]/20 cursor-grab active:cursor-grabbing transition-all" data-type="slider">
                            <div class="text-[11px] font-bold text-[#403F3C]/60 mb-1 group-hover:text-[#403F3C]">Before/After Slider</div>
                            <div class="text-[10px] text-[#403F3C]/30">Drag to compare two results.</div>
                        </div>
                        <div draggable="true" class="component-card group p-4 border border-[#403F3C]/5 rounded-sm bg-white hover:border-[#403F3C]/20 cursor-grab active:cursor-grabbing transition-all" data-type="video">
                            <div class="text-[11px] font-bold text-[#403F3C]/60 mb-1 group-hover:text-[#403F3C]">Autonomous Video</div>
                            <div class="text-[10px] text-[#403F3C]/30">Auto-playing loop for demos.</div>
                        </div>
                        <div draggable="true" class="component-card group p-4 border border-[#403F3C]/5 rounded-sm bg-white hover:border-[#403F3C]/20 cursor-grab active:cursor-grabbing transition-all" data-type="chart">
                            <div class="text-[11px] font-bold text-[#403F3C]/60 mb-1 group-hover:text-[#403F3C]">Telemetry Chart</div>
                            <div class="text-[10px] text-[#403F3C]/30">Visualize logs or performance.</div>
                        </div>
                    </div>
                </section>

                <section class="bg-[#403F3C]/[0.02] p-6 rounded-sm border border-[#403F3C]/5">
                    <h2 class="text-[10px] uppercase tracking-[0.2em] text-[#403F3C]/30 mb-4 font-bold">Markdown Tips</h2>
                    <ul class="text-[11px] text-[#403F3C]/50 space-y-2 leading-relaxed">
                        <li><span class="font-bold text-[#403F3C]/70"># Header</span> for titles</li>
                        <li><span class="font-bold text-[#403F3C]/70">**Bold**</span> for emphasis</li>
                        <li><span class="font-bold text-[#403F3C]/70">> Quote</span> for insights</li>
                        <li><span class="font-bold text-[#403F3C]/70">![Alt](url)</span> for images</li>
                        <li><span class="font-bold text-[#403F3C]/70">```code```</span> for blocks</li>
                    </ul>
                </section>
            </div>
        </div>
	</div>

    <!-- Component Config Modal -->
    <div id="modal" class="fixed inset-0 bg-[#F8F6F3]/90 backdrop-blur-sm z-[200] hidden items-center justify-center p-6">
        <div class="bg-white border border-[#403F3C]/10 p-8 rounded-sm max-w-[400px] w-full shadow-2xl">
            <h2 id="modal-title" class="text-sm font-bold uppercase tracking-widest text-[#403F3C] mb-6">Component Settings</h2>
            <div id="modal-fields" class="space-y-4 mb-8"></div>
            <div class="flex gap-4">
                <button id="modal-save" class="flex-1 bg-[#403F3C] text-white text-[10px] font-bold uppercase py-3 rounded-sm font-yellix">Insert Component</button>
                <button id="modal-cancel" class="flex-1 border border-[#403F3C]/10 text-[#403F3C]/40 text-[10px] font-bold uppercase py-3 rounded-sm font-yellix">Cancel</button>
            </div>
        </div>
    </div>

	<script>
		// --- Dashboard Logic ---
		const editor = document.getElementById('editor') as HTMLTextAreaElement;
        const memoSelect = document.getElementById('memo-select') as HTMLSelectElement;
        const modal = document.getElementById('modal');
        const modalFields = document.getElementById('modal-fields');
        const modalTitle = document.getElementById('modal-title');
        
        let activeComponent = '';

        // Detección automática al cargar
        if (localStorage.getItem('builder_status') === 'authorized') {
            document.getElementById('auth-view')?.classList.add('hidden');
            document.getElementById('console-view')?.classList.remove('hidden');
            loadMemos();
        }

        async function loadMemos() {
            const res = await fetch('/api/publish');
            const files = await res.json();
            if (Array.isArray(files)) {
                memoSelect.innerHTML = '<option value="">Select Builders Memo...</option>' + 
                files.map(f => `<option value="${f}">${f}</option>`).join('');
            }
        }

        memoSelect?.addEventListener('change', async () => {
            const fileName = memoSelect.value;
            if (!fileName) return;
            editor.value = "Establishing link to repository...";
            const res = await fetch('/api/publish', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ fileName })
            });
            const data = await res.json();
            if (data.content) editor.value = data.content;
        });

        // --- Drag & Drop / Modal Logic ---
        document.querySelectorAll('.component-card').forEach(card => {
            card.addEventListener('dragstart', (e: any) => {
                activeComponent = (e.target as HTMLElement).dataset.type || '';
            });
        });

        editor.addEventListener('dragover', (e) => e.preventDefault());
        editor.addEventListener('drop', (e) => {
            e.preventDefault();
            openModal(activeComponent);
        });

        function openModal(type: string) {
            if (!modal || !modalFields || !modalTitle) return;
            modal.style.display = 'flex';
            modalFields.innerHTML = '';
            
            if (type === 'slider') {
                modalTitle.innerText = 'Slider Settings';
                modalFields.innerHTML = `
                    <input type="text" placeholder="Before Image URL" class="w-full bg-[#403F3C]/5 border-none p-3 text-[12px] outline-none" id="field-before">
                    <input type="text" placeholder="After Image URL" class="w-full bg-[#403F3C]/5 border-none p-3 text-[12px] outline-none" id="field-after">
                `;
            } else if (type === 'video') {
                modalTitle.innerText = 'Video Settings';
                modalFields.innerHTML = `<input type="text" placeholder="Video URL (.mp4)" class="w-full bg-[#403F3C]/5 border-none p-3 text-[12px] outline-none" id="field-video">`;
            } else if (type === 'chart') {
                modalTitle.innerText = 'Chart Configuration';
                modalFields.innerHTML = `
                    <select id="chart-type" class="w-full bg-[#403F3C]/5 border-none p-3 text-[12px] outline-none mb-4">
                        <option value="line">Line Chart (Trend)</option>
                        <option value="bar">Bar Chart (Comparison)</option>
                        <option value="pie">Pie Chart (Distribution)</option>
                    </select>
                    <input type="text" id="chart-title" placeholder="Chart Title" class="w-full bg-[#403F3C]/5 border-none p-3 text-[12px] outline-none mb-4">
                    <div class="grid grid-cols-2 gap-4 mb-4">
                        <input type="text" id="field-xaxis" placeholder="X-Axis Key (e.g. name)" class="bg-[#403F3C]/5 border-none p-3 text-[12px] outline-none">
                        <input type="text" id="field-yaxis" placeholder="Y-Axis Key (e.g. value)" class="bg-[#403F3C]/5 border-none p-3 text-[12px] outline-none">
                    </div>
                    <p class="text-[10px] text-[#403F3C]/40 mb-2 font-mono">Data (JSON Format):</p>
                    <textarea id="chart-data" class="w-full bg-[#403F3C]/5 border-none p-3 text-[11px] font-mono outline-none h-32" placeholder='[{"name": "A", "value": 10}, {"name": "B", "value": 20}]'></textarea>
                `;
                // Populate example
                (document.getElementById('chart-data') as HTMLTextAreaElement).value = '[{"name": "Jan", "value": 40}, {"name": "Feb", "value": 60}, {"name": "Mar", "value": 85}]';
                (document.getElementById('field-xaxis') as HTMLInputElement).value = 'name';
                (document.getElementById('field-yaxis') as HTMLInputElement).value = 'value';
            }
        }

        document.getElementById('modal-save')?.addEventListener('click', () => {
            let tag = '';
            if (activeComponent === 'slider') {
                const b = (document.getElementById('field-before') as HTMLInputElement).value;
                const a = (document.getElementById('field-after') as HTMLInputElement).value;
                tag = `\n<BeforeAfterSlider client:load beforeImage="${b}" afterImage="${a}" />\n`;
            } else if (activeComponent === 'video') {
                const v = (document.getElementById('field-video') as HTMLInputElement).value;
                tag = `\n<video src="${v}" autoplay muted loop class="rounded-sm w-full" />\n`;
            } else if (activeComponent === 'chart') {
                const type = (document.getElementById('chart-type') as HTMLSelectElement).value;
                const title = (document.getElementById('chart-title') as HTMLInputElement).value;
                const x = (document.getElementById('field-xaxis') as HTMLInputElement).value;
                const y = (document.getElementById('field-yaxis') as HTMLInputElement).value;
                const data = (document.getElementById('chart-data') as HTMLTextAreaElement).value;
                tag = `\n<TelemetryChart client:load type="${type}" title="${title}" xAxis="${x}" yAxis="${y}" data={${data}} />\n`;
            }

            editor.value += tag;
            if (modal) modal.style.display = 'none';
        });

        // Logout
        document.getElementById('logout-btn')?.addEventListener('click', () => {
            localStorage.removeItem('builder_status');
            window.location.reload();
        });

        // AI fine-tune logic simplified for brevity
	</script>
</Layout>
